<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <p id="notice"><%= notice %></p>

      <h1>Banka Teklifleri</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Tur</th>
            <th>Banka</th>
            <th>Teklif Miktarı</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @bank_offers.each do |bank_offer| %>
            <tr>
              <td><%= bank_offer.round.name %></td>
              <td><%= bank_offer.bank.name %></td>
              <td><%= bank_offer.price %></td>
              <td><%= link_to 'Düzenle', edit_bank_offer_path(bank_offer) %></td>
              <td><%= link_to 'Sil', bank_offer, method: :delete, data: { confirm: 'Emin misin?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Bank offer', new_bank_offer_path %>
    </div>    
  </div>

</div><!-- /.container -->


