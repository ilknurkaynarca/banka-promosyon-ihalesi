<%= simple_form_for(@bank_offer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :round_id, collection: Round.all, label: "Tur:"  %>
    <%= f.input :bank_id, collection: Bank.all, label: "Banka Seçiniz" %>
    <%= f.input :price, label: "Teklif Miktarı" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Kaydet" %>
  </div>
<% end %>
<script>
  $(function() {
    $('#bank_offer_price').maskMoney();
  })
</script>